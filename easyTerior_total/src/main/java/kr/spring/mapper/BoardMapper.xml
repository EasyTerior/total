<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.spring.mapper.BoardMapper">
	<!-- SQL 문 작성 -->
	<select id="boardList" resultType="kr.spring.entity.Board">
		SELECT * FROM Board
		ORDER BY
		createdAt DESC;
	</select>

	<!-- 게시글 추가 -->
	<insert id="boardInsert" parameterType="kr.spring.entity.Board">
		INSERT INTO Board(title,
		content, memID,boardImage,voteContent1, voteContent2)
		VALUES(#{title}, #{content}, #{memID},#{uniqueName},#{voteContent1},#{voteContent2});
	</insert>

	<!-- 게시글 상세보기 -->
	<select id="boardContent" parameterType="int"
		resultType="kr.spring.entity.Board">
		SELECT * FROM Board
		WHERE boardID = #{boardID};
	</select>
	
	<!-- 게시글 삭제 -->
	<delete id="boardDelete" parameterType="int">
		delete from Board
	    where boardID = #{boardID};
	</delete>

</mapper>